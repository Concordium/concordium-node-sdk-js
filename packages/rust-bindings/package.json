    },
    "main": "pkg/node/concordium_rust_bindings.js",
    "browser": "pkg/bundler/concordium_rust_bindings.js",
    "types": "pkg/bundler/concordium_rust_bindings.d.ts",
    "files": [
        "/pkg/**/concordium_rust_bindings*"
    ],
    "scripts": {
